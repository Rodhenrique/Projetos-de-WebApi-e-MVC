<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Be3_Gerenciador</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/StyleSheet.css" />
        <script src="https://kit.fontawesome.com/04a6eebba3.js" crossorigin="anonymous"></script>

        <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;1,100;1,200;1,300;1,400&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    </environment>
</head>
<body>
    <nav class="menu-navbar">  
        <div>

        <a asp-controller="Home" asp-action="Index"><span>Clinica</span> <span>Be</span>3</a>
            <div class="menu">
                <ul>
                    <li>
                        <a asp-controller="Home" asp-action="Index">Cadastro</a>
                    </li>
                    <li>
                        <a asp-controller="Pacientes" asp-action="Index">Prontuários</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
  
    @RenderBody()

    @RenderSection("Scripts", required: false)
</body>
</html>
